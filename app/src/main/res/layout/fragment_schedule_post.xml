<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".scenarios.main.schedulePost.SchedulePostFragment">
    <data>
        <variable
            name = "viewModel"
            type="com.hyejin.petdiary.scenarios.main.schedulePost.SchedulePostViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="start">
            <Button
                android:id="@+id/calenderBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="10dp"
                android:text="▾"
                android:onClick="@{() -> viewModel.showCalenderDialog()}"
                android:background="@drawable/radius_button"
                android:textSize="20sp"
                android:textColor="#C58E32"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@{viewModel.dateString}"
                android:textColor="#ECBA64"
                android:textSize="21sp"
                android:fontFamily="@font/a"
                android:textStyle="bold"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <View
                        android:id="@+id/view1"
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:background="#ECBA64"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/todolistText"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:fontFamily="@font/bouncy_solid"
                        android:gravity="center"
                        android:text="To Do List"
                        android:textColor="#E1A235"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/scheduleBtn"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="end|center_vertical"
                        android:background="@drawable/radius_button"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/im_hyemin_bold"
                        android:onClick="@{()-> viewModel.showScheduleDialog()}"
                        android:text="+"
                        android:textColor="#C8943B"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <View
                        android:id="@+id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:background="#ECBA64"
                        android:layout_weight="1"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/scaduleListLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        tools:ignore="MissingConstraints">
                    <TextView
                        android:layout_gravity="bottom"
                        android:id="@+id/scheduleTextView1"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/im_hyemin_bold"
                        android:text="@{viewModel.scheduleArray[0]}"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="center"
                        app:layout_constraintEnd_toStartOf="@+id/scheduleTextView2"
                        tools:layout_editor_absoluteY="0dp"
                        android:background="@color/yellowthick"
                        tools:ignore="MissingConstraints" />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/emo1"
                            android:layout_gravity="center_horizontal"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/framelayout2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/scheduleTextView2"
                            android:layout_width="110dp"
                            android:layout_height="100dp"
                            android:fontFamily="@font/im_hyemin_bold"
                            android:text="@{viewModel.scheduleArray[1]}"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:background="@color/yellowthick"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/emo2"
                            android:layout_gravity="center_horizontal"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@+id/framelayout2"
                        tools:ignore="MissingConstraints">
                        <TextView
                            android:id="@+id/scheduleTextView3"
                            android:layout_width="110dp"
                            android:layout_height="100dp"
                            android:fontFamily="@font/im_hyemin_bold"
                            android:text="@{viewModel.scheduleArray[2]}"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:background="@color/yellowthick"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/emo1"
                            android:layout_gravity="center_horizontal"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/framelayout2">
                        <TextView
                            android:id="@+id/scheduleTextView4"
                            android:layout_width="110dp"
                            android:layout_height="100dp"
                            android:fontFamily="@font/im_hyemin_bold"
                            android:text="@{viewModel.scheduleArray[3]}"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:background="@color/yellowthick"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/emo3"
                            android:layout_gravity="center_horizontal"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/framelayout2"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="60dp">
                        <TextView
                            android:id="@+id/scheduleTextView5"
                            android:layout_width="110dp"
                            android:layout_height="100dp"
                            android:fontFamily="@font/im_hyemin_bold"
                            android:text="@{viewModel.scheduleArray[4]}"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:background="@color/yellowthick"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/emo2"
                            android:layout_gravity="center_horizontal"/>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:text="TIP"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/yellowthick"
                    android:fontFamily="@font/janda_bubble"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="산책은 생후 6주에서 8주 사이에 시작하는 것이 좋답니다!\n접종을 하지 않은 강아지의 경우에는 안고 다녀주세요"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/cafe"
                    android:background="@drawable/radius_textview" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="잠자는 도중에 억지로 깨우지 마세요 !\n자주 일어난다면 동물들도 스트레스 받습니다"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/cafe"
                    android:background="@drawable/radius_textview" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="오랫동안 혼자 내버려두지 마세요!\n외로움을 많이 타는 동물은 불안해할 수 있어요"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/cafe"
                    android:background="@drawable/radius_textview" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>